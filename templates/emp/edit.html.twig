{% extends 'base.html.twig' %}

{% block title %}Edit Employee{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Edit Employee</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_emp_index') }}"> 
                    Back To List
                </a>
            </div>
            <div class="card-body">
                {{ include('emp/_form.html.twig', {'button_label': 'Update'}) }}
                {{ include('emp/_delete_form.html.twig') }}
            </div>
            <div id="profile_image" data-variable="{{ asset('uploads/profile_image/') ~ employee.profilePic }}"></div>
        </div>
    </div>

    {% block javascripts %}
        <script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
        <script src="{{ asset('js/script.js') }}"></script>
    {% endblock %}

{% endblock %}
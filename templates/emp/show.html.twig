{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">{{ employee.Name }}</h2>
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ employee.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ employee.Name }}</td>
                        </tr>
                        <tr>
                            <th>BirthDate</th>
                            <td>{{ employee.BirthDate ? employee.BirthDate|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Technology</th>
                            <td>{{ employee.technology }}</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>{{ employee.gender }}</td>
                        </tr>
                        <tr>
                            <th>Email id</th>
                            <td>{{ employee.emailId }}</td>
                        </tr>
                        <tr>
                            <th>Profile Link</th>
                            <td>{{ employee.profileLink }}</td>
                        </tr>
                        <tr>
                            <th>Profile Pic</th>
                            <td><img src="{{ asset('uploads/profile_image/') ~ employee.profilePic }}" height="100"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_emp_index') }}"> 
                    Back To List
                </a>
                <a class="btn btn-outline-info float-right" href="{{ path('app_emp_edit', {'id': employee.id}) }}"> 
                    Edit
                </a>
                {{ include('emp/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
